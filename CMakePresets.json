{
  "version": 5,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug",
      "description": "Standard Debug config for local development",
      "binaryDir": "build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -g -Wextra -Weffc++ -Wno-unused-parameter -Wdeprecated-declarations -O0",
        "CMAKE_C_FLAGS": "-Wall -g -Wextra -Weffc++ -Wdeprecated-declarations -O0"
      }
    },
    {
      "name": "debug-coverage",
      "inherits": "base",
      "displayName": "Debug[coverage]",
      "description": "Debug config for test coverage",
      "binaryDir": "build/debug-coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Weffc++",
        "CMAKE_C_FLAGS": "-Wall -Wextra -Weffc++",
        "CODE_COVERAGE": "ON"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Release",
      "description": "Optimized Release",
      "binaryDir": "build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -flto -march=native",
        "CMAKE_C_FLAGS": "-O3 -flto -march=native",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld -Wl -O1",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=lld -Wl -O1",
        "CMAKE_MODULE_LINKER_FLAGS": "-fuse-ld=lld -Wl -O1"
      }
    },
    {
      "name": "asan-debug",
      "inherits": "base",
      "displayName": "Clang with AddressSanitizer (Debug)",
      "binaryDir": "${sourceDir}/build/asan-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined,leak -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined,leak",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address,undefined,leak"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "build/msvc-debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_FLAGS": "/D_SILENCE_ALL_MS_EXT_DEPRECATION_WARNINGS"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "configurePreset": "debug",
      "configuration": "Debug",
      "jobs": 18,
      "targets": [
        "Cauldron",
        "assettool",
        "testarea-tests",
        "triton-tests",
        "testarea",
        "framework-test",
        "graphics-vk-test"
      ]
    },
    {
      "name": "debug-coverage",
      "displayName": "Debug Build With Coverage",
      "configurePreset": "debug-coverage",
      "jobs": 18,
      "targets": [
        "Cauldron",
        "testarea-tests",
        "triton-tests",
        "triton-tests-coverage",
        "testarea",
        "framework-test"
      ]
    },
    {
      "name": "asan-debug",
      "displayName": "Asan Debug Build",
      "configurePreset": "asan-debug",
      "configuration": "Debug",
      "jobs": 18,
      "targets": [
        "Cauldron"
      ]
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "configurePreset": "release",
      "configuration": "Release",
      "jobs": 18,
      "targets": [
        "Cauldron"
      ]
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug Build",
      "configurePreset": "msvc-debug",
      "configuration": "Debug",
      "jobs": 12,
      "targets": [
        "Cauldron"
      ]
    }
  ]
}