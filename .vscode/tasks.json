{
   "version": "2.0.0",
   "tasks": [
      {
         "type": "cmake",
         "label": "CMake: Build AssetTool",
         "command": "build",
         "preset": "editor-debug",
         "problemMatcher": [],
         "detail": "CMake Build AssetTool",
         "targets": [
            "assettool"
         ]
      },
      {
         "label": "Build AssetTool",
         "detail": "Build AssetTool in Debug",
         "type": "shell",
         "command": "cmake",
         "args": [
            "--build",
            "--preset",
            "editor-debug",
            "--target",
            "assettool"
         ],
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "clear": true
         }
      },
      {
         "label": "Build Editor",
         "detail": "Build Editor in Debug Configuration",
         "type": "shell",
         "command": "cmake",
         "args": [
            "--build",
            "--preset",
            "editor-debug",
            "--target",
            "editor"
         ],
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "clear": true
         }
      },
      {
         "label": "AssetTool-Model",
         "dependsOn": "build-AssetTool",
         "type": "shell",
         "command": "${workspaceFolder}/build/debug/apps/assettool/assettool",
         "args": [
            "gltf",
            "-f=/Users/matt/Projects/game-assets/models/gltf-working/textured.gltf",
            "-s=/Users/matt/Projects/game-assets/models/gltf-working/skeleton.ozz",
            "-o=/Users/matt/Projects/game-assets/models/gltf-working/model.json"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "clear": true,
            "showReuseMessage": false
         }
      },
      {
         "label": "AssetTool-AnotherModel",
         "type": "shell",
         "command": "${workspaceFolder}/build/debug/apps/assettool/assettool",
         "args": [
            "gltf",
            "-f=/Users/matt/Projects/game-assets/models/gltf-working/textured.gltf",
            "-s=/Users/matt/Projects/game-assets/models/gltf-working/skeleton.ozz",
            "-o=/Users/matt/Projects/game-assets/models/gltf-working/model.json"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
         }
      },
      {
         "type": "cmake",
         "label": "CMake: build",
         "command": "build",
         "targets": [
            "editor"
         ],
         "group": "build",
         "problemMatcher": [],
         "detail": "CMake template build task",
         "presentation": {
            "clear": true,
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false
         }
      },
      {
         "label": "Run Ninja ccov-asset-lib-test",
         "type": "shell",
         "command": "ninja",
         "args": [
            "ccov-export-asset-lib-test"
         ],
         "group": {
            "kind": "build",
            "isDefault": false
         },
         "options": {
            "cwd": "${workspaceFolder}\\build\\debug-coverage"
         },
         "problemMatcher": [],
         "detail": "Runs the Ninja target ccov-asset-lib-test."
      },
      {
         "type": "cmake",
         "label": "CMake: clean",
         "command": "clean",
         "preset": "${command:cmake.activeBuildPresetName}",
         "problemMatcher": [],
         "detail": "CMake clean the active build preset.",
      }
   ]
}